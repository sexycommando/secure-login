<!DOCTYPE logback>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss.SSS}\tthread:%thread\tUSER:%X{USER}\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-48logger{48}\tmessage:%msg%n]]></pattern>
        </encoder>
    </appender>

    <appender name="APPLICATION_LOG_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${app.log.dir:-log}/security-application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${app.log.dir:-log}/security-application-%d{yyyyMMdd}.zip</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss.SSS}\tthread:%thread\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-48logger{48}\tmessage:%msg%n]]></pattern>
        </encoder>
    </appender>

    <appender name="MONITORING_LOG_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${app.log.dir:-log}/security-monitoring.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>error</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${app.log.dir:-log}/security-monitoring-%d{yyyyMMdd}.zip</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss.SSS}\tX-Track:%X{X-Track}\tlevel:%-5level\tmessage:%msg%n]]></pattern>
        </encoder>
    </appender>

    <appender name="AUDIT_LOG_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${app.log.dir:-log}/security-audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${app.log.dir:-log}/security-audit-%d{yyyyMMdd}.zip</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern><![CDATA[date:%d{yyyy-MM-dd HH:mm:ss.SSS}\tthread:%thread\tUSER:%X{USER}\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-48logger{48}\tmessage:%msg%n]]></pattern>
        </encoder>
    </appender>

    <appender name="DB" class="ch.qos.logback.classic.db.DBAppender">
        <connectionSource class="ch.qos.logback.core.db.DataSourceConnectionSource">
            <dataSource class="org.apache.commons.dbcp2.BasicDataSource">
                <driverClassName>org.h2.Driver</driverClassName>
                <url>jdbc:h2:mem:secure-login-test;DB_CLOSE_DELAY=-1;</url>
                <username>sa</username>
                <password></password>
            </dataSource>
        </connectionSource>
    </appender>

    <!-- Application Loggers -->
    <logger name="org.terasoluna.securelogin.domain">
        <level value="info" />
    </logger>
    <logger name="org.terasoluna.securelogin.app">
        <level value="info" />
    </logger>
    <logger
        name="org.terasoluna.securelogin.domain.common.interceptor.ServiceCallLoggingInterceptor"
        additivity="false">
        <level value="info" />
        <appender-ref ref="AUDIT_LOG_FILE" />
        <appender-ref ref="DB" />
    </logger>

    <!-- TERASOLUNA -->
    <logger name="org.terasoluna.gfw">
        <level value="info" />
    </logger>
    <logger name="org.terasoluna.gfw.web.logging.TraceLoggingInterceptor">
        <level value="info" />
    </logger>
    <logger name="org.terasoluna.gfw.common.exception.ExceptionLogger">
        <level value="info" />
    </logger>
    <logger
        name="org.terasoluna.gfw.common.exception.ExceptionLogger.Monitoring"
        additivity="false">
        <level value="error" />
        <appender-ref ref="MONITORING_LOG_FILE" />
        <appender-ref ref="DB" />
    </logger>
    <logger name="org.terasoluna.gfw.web.logging.HttpSessionEventLoggingListener">
        <level value="debug" />
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.springframework">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.web.servlet">
        <level value="info" />
    </logger>

    <logger
        name="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <level value="info" />
    </logger>


    <logger name="jdbc.sqltiming" additivity="true" level="on">
        <level value="info" />
    </logger>
    <logger name="jdbc.connection" additivity="true" level="on">
        <level value="info" />
    </logger>
    <logger name="jdbc.sqlonly" additivity="false" level="off" />
    <logger name="jdbc.audit" additivity="false" level="off" />
    <logger name="jdbc.resultset" additivity="false" level="off" />
    <logger name="jdbc.resultsettable" additivity="false" level="off" />


    <root level="warn">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLICATION_LOG_FILE" />
        <appender-ref ref="MONITORING_LOG_FILE" />
        <appender-ref ref="DB" />
    </root>

</configuration>
